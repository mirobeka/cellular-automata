{% extends "application.jinja" %}
{% set active_page = "projects" %}
{% set active_tab = "evolve" %}

{# change title #}
{% block title %}WICA - Project {{ project.name }}{% endblock %}

{% block head %}
<script src= {{ url_for("static", filename="js/form.js") }}></script>
<script src= {{ url_for("static", filename="js/project_evolve.js") }}></script>
{{ super() }}
{% endblock %}

{# content for main block #}
{% block content %}
<div class="ui page grid">
    <div class="ui column">

        {% include "_project_header.jinja" %}

        {{ helper.tab_menu(project.name, active_tab) }}

        <div class="ui bottom attached segment">
            <div class="ui grid">
                <div class="four wide column">
                    <div class="ui segment">
                        <div class="ui list">
                            {% if weights %}
                                {% for weights in project.weights %}
                                <div class="item">
                                    <i class="file icon"></i>
                                    <a class="load weight" data-name={{weights.name}}> {{ weights.name|replace(".wgh","") }}</a>
                                </div> {# end item #}
                                {% endfor %}
                            {% else %}
                                No weights
                            {% endif %}
                        </div> {# end list #}
                    </div> {# end center aligned segment #}
                    <div class="ui icon green evolve labeled button">
                        <i class="leaf icon"></i>
                        Evolve weights
                    </div>
                </div> {# end first column #}
                <div class="nine wide column">
                    <div class="ui center aligned segment dimmable">
                        <div class="ui dimmer hidden">
                            <div class="content">
                                <div class="center">
                                    Weights loaded
                                </div>
                            </div>
                        </div>Â {# end dimmer #}
                        <h2 class="ui huge center aligned icon header" >
                            <i class="circular emphasized inverted green hdd icon"></i>
                            <div class="content">Load Weights to edit</div>
                        </h2>
                    </div> {# end center aligned segment #}
                </div> {# end third column #}
            </div> {# end grid #}
        </div>

    </div> {# end ui column #}
</div>
{% endblock %}
