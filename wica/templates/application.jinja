{% import 'view_helpers.jinja' as helper %}

{# if active_page is not set, make dashboard default #} 
{% set active_page = active_page|default("dashboard") %}

{# define navigation items #}
{% set navigation = [
    ("dashboard", url_for("dashboard"), "dashboard"),
    ("projects", url_for("get_projects"), "lab"),
    ("documentation", url_for("documentation"), "text file"),
    ("about", url_for("about"), "question")
    ]
    %}
<!doctype html>
<html>
    <head>
        <title>{% block title%}{% endblock %}</title>
        {% include "_head.jinja" %}
        {% block head %}
        {% endblock %}
    </head>
    <body>
        {# navigation #}
        <nav> {{ helper.menu(navigation, active_page) }} </nav>

        {# replace block with content #}
        {% block content %}{% endblock %}

    </body>
</html>


